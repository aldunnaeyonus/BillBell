{
  "expo": {
    "name": "BillBell",
    "slug": "billbell",
    "scheme": "billbell",
    "version": "26.1",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F7F9FC"
    },
    "newArchEnabled": true,
    "ios": {
      "config": {
        "usesNonExemptEncryption": false,
        "NSSupportsLiveActivities": true,
      },
      "bundleIdentifier": "com.dunn.carabali.billbell",
      "appleTeamId": "2899NRK28S",
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "NSCalendarsFullAccessUsageDescription": "BillBell needs access to your Calendar to schedule automatic reminders.",
        "NSCalendarsUsageDescription": "BillBell needs access to your Calendar to schedule automatic reminders.",
        "NSFaceIDUsageDescription": "BillBell uses Face ID to securely unlock the app.",
        "NSRemindersFullAccessUsageDescription": "BillBell needs access to your Reminders to schedule tasks.",
        "NSRemindersUsageDescription": "BillBell needs access to your Reminders to schedule tasks."
      }
    },
    "android": {
      "package": "com.dunn.carabali.billbell",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F7F9FC"
      },
      "permissions": [
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "POST_NOTIFICATIONS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "POST_NOTIFICATIONS"
      ]
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "1.9.24",
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "gradlePluginVersion": "8.9.2"
          }
        }
      ],
      "react-native-ota-hot-update",
      "expo-router",
      "expo-secure-store",
      "expo-apple-authentication",
      "expo-local-authentication",
      "expo-localization",
      [
        "expo-calendar",
        {
          "calendarPermission": "The app needs to access your calendar."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#0B1F3B"
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.249297362734-l96l6esjnm2rd1bp4u2bi7gh1d8fgkh7"
        }
      ],
      [
        "react-native-share",
        {
          "ios": ["whatsapp", "instagram", "fb"],
          "android": ["com.whatsapp", "com.instagram.android"]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "REPLACE_WITH_EAS_PROJECT_ID"
      }
    }
  }
}